.Home
  text-align center
  padding 1.2em
  padding-right 3em


.Home-header
  display flex
  justify-content space-between
  align-items center
  border-bottom 2px solid black

  h1
    font-size 1.5em
    @media all and (min-width:768px)
      font-size 2em


  .input-group
    max-width 280px
    width 50%
    @media all and (min-width:600px)
      width 40%
    @media all and (min-width:768px)
      width 35%
    @media all and (min-width:850px)
      width 35%

.movie-list-list
  list-style none
  display flex
  padding-left 0
  flex-wrap wrap
  justify-content flex-start


  .movie-list-item
    position relative
    margin-bottom .8em

    &:after
      content""
      background #777
      position absolute
      bottom .6em
      height 1px



    .movie-list-item-img
      width: 100%
    .movie-list-item-rate
      background #d66e46
      color #f5f5f5
      position absolute
      padding .3em .45em
      font-size 1.7em
      display flex
      border-radius 3px
      left calc(100% - 2.8em)
      top: .7em

    h4,p
      text-align left

    p
      color #888



  @media all and (min-width:768px)

    &
      margin 0 -.5em

    .movie-list-item
      &:after
        left calc(.4em)
        width calc(100% - .8em)

      width calc(100%/4)
      padding .6em




//TODO MEDIA QUERY TO 1 column
  @media all and (max-width:767px)
    &
      margin 0 -.4em

    .movie-list-item
      &:after
        left calc(.5em)
        width  calc(100% - 1em)

      width calc(100%/2)
      padding .5em

      .movie-list-item-rate
        font-size 1.7em

  @media all and (max-width:500px)
    .movie-list-item
      .movie-list-item-rate
        font-size 1.4em

  @media all and (max-width:450px)
    .movie-list-item
      .movie-list-item-rate
        font-size 1.3em

.no-movies
  padding-top 3em
  font-size 3em

.add-entity-btn-container
  display: none
  justify-content: flex-end
  width: 35%


  @media all and (min-width:768px)
    display: flex
  @media all and (min-width:880px)
    width: 38%;
  @media all and (min-width:980px)
    width: 45%;
  @media all and (min-width:1080px)
    width: 50%;
  @media all and (min-width:1200px)
    width: 55%;


.add-entity
  background #d66e46
  color white
  margin-left 1em
  &, &:hover, &:focus
    color white
  &:hover
    background #d09176


.modal-body
  padding-bottom 2em


.btn-primary
  background: #d66e46
  border:#d66e46

  &:hover,
  &:active,
  &:focus

    background-color: #e2764a !important
    border:#d66e46


input,
select
  margin-bottom 1em
