.actor-detail-container
  padding 3em

  h1
    width: 100%
    border-bottom 2px solid black
    margin-bottom .8em

  .actor-details
    display flex

    @media all and (max-width:600px)
      &
        flex-direction column
        img
          max-width 250px
          align-self center

    .actor-details-info

      padding 1em
      padding-top 0
      display: flex
      flex-direction column

      .actor-rating
        background #d66e46
        width 100%
        color #f5f5f5

      &:nth-child(2)
        width:100%

      &:first-child
        padding-left 0

      img
        border-radius 5px

      span
        font-size 1.3em
        padding .4em
        width 100%

      .rateMovie-label
        padding-top 1em
        font-size 1.3em




